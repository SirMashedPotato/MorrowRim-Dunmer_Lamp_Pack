			<texPath>Things/Building/Furniture/MorrowRim_DunmerPaperLanterns/MorrowRim_DunmerPaperLantern_A</texPath>
		</graphicData>
		<costList Inherit="False">
			<Steel>10</Steel>
			<WoodLog>10</WoodLog>
		</costList>
	</ThingDef>
